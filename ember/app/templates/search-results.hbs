<div id="wrap">
  {{navigation-wrapper user=model.user}}
  <div id="main">
    <div class="container">
      {{#each model.lodgings.model as |lodging|}}
      <div class="row">
        <div class="col-xs-12">
          <div class="reservation-details reservation-details-search">
            <div class="row">
              <div class="col-xs-6">
                <img class="reservation-image" src="{{lodging.profileImagePath}}" />
                <h1 class="reservation-lodging-name">
                  <span>Lodging</span><br>
                  {{lodging.name}}
                </h1>
              </div>
              <div class="col-xs-6">
                {{search-reservation-display id=lodging.id params=model.params class="search-reservation-times" onReserve=(action 'reserve')}}
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
      {{page-numbers currentPage=model.lodgings.pageNumber maxPages=model.lodgings.numberOfPages}}
    </div>
  </div>
</div>
