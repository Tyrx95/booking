<form class="admin-form" {{action 'submitFacility' on='submit'}}>
  <div class="row">
    <div class="col-xs-12">
      {{input class='form-input' type="text" placeholder="Name" value=model.facility.name}}
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12" style="text-align: right">
      {{#link-to 'admin.facilities' class="form-button form-button-small form-button-grey"}}Cancel{{/link-to}}
      <button class="form-button form-button-small" type="submit">{{if model.isEdit 'Edit' 'Add'}} Facility</button>
    </div>
  </div>
</form>
