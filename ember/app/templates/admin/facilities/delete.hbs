<form class="admin-form" {{action 'deleteFacility' on='submit'}}>
  <div class="row">
    <div class="col-xs-12">
      <h1 class="admin-from-title">Delete {{model.facility.name}}?</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12" style="text-align: right">
      {{#link-to 'admin.facilities' class="form-button form-button-small form-button-grey"}}Cancel{{/link-to}}
      <button class="form-button form-button-small" type="submit">Delete {{model.facility.name}}</button>
    </div>
  </div>
</form>
